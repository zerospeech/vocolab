[Unit]
Description=zr worker server
After=network.target

[Service]
Type=notify
User={{user}}
Group={{group}}
Environment=ZR_ENV_FILE={{settings_file}}
WorkingDirectory={{run_dir}}
ExecStart={{cmd}}
ExecStop=/bin/kill -s TERM $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target
